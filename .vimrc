set background=dark
set ruler
set ignorecase
set hlsearch
set showmatch
set encoding=utf8
set nobackup
set nowb
set noswapfile
set tabstop=4
set ai
set si
set wrap
set showbreak=↪
set noexpandtab
set colorcolumn=80

set list
set listchars=space:·,tab:→\ ,eol:\ ,nbsp:␣,trail:•,extends:»,precedes:«

noremap <S-Left> <Home>
inoremap <S-Left> <Home>
noremap <S-Right> <End>
inoremap <S-Right> <End>

let g:gruvbox_italic=1

set termguicolors
color molokai
"color gruvbox

syntax on

